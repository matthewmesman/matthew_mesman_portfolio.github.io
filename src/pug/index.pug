                .row.justify-content-center.mb-4
                    .col-md-4
                        img.img-fluid.rounded.mb-3(src='assets/img/portfolio/rowing.jpg', alt='Photo 1')
                    .col-md-4
                        img.img-fluid.rounded.mb-3.about-photo-middle(src='assets/img/portfolio/headshot.jpg', alt='Photo 2')
                    .col-md-4
                        img.img-fluid.rounded.mb-3(src='assets/img/portfolio/headshot2.jpg', alt='Photo 3')
                // About Section Button

